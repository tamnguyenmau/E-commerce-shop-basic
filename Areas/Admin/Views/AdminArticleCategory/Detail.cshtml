
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

@model ArticleCategory

<!-- Thanh điều hướng -->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-route="AdminHome"> Bàn Làm Việc</a></li>
        <li class="breadcrumb-item"><a asp-route="AdminArticleCategory">Thể loại tin tức</a></li>
        <li class="breadcrumb-item active" aria-current="page">Chi Tiết thể loại Tin Tức</li>
    </ol>
</nav>
<!-- Nội dung chính -->
<section class="category-page">
    <div class="row">
        <div class="col-12 right">
            <header>
                <i class="fa fa-folder icon"></i>
                <h4>Danh Sách thể loại Tin Tức</h4>
                <a class="btn delete-btn" href="#">
                    <i class="fa fa-trash"></i>
                </a>
                <a class="btn add-btn" href="#">
                    <i class="fa fa-plus-circle"></i>
                </a>
                <div class="clearfix"></div>
            </header>
            <content>
                <div class="accordion" id="accordion-main">
                    <div class="card">
                        <div class="card-header">
                            <h2 class="mb-0">
                                <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne">
                                    <i class="fa fa-caret-right"></i>
                                    Thông tin cơ bản
                                </button>
                            </h2>
                        </div>

                        <div id="collapseOne" class="collapse show" data-parent="#accordion-main">
                            <div class="card-body">
                                <form asp-route="AdminArticleCategoryDetail"
                                      asp-route-id="@Model.ArticleCategoryId"
                                      method="post">
                                    <div class="row">
                                        <div class="col-12 col-lg-2">
                                            Mã số:
                                        </div>
                                        <div class="col-12 col-lg-2">
                                            <input asp-for="@Model.ArticleCategoryId" type="text" readonly class="form-control form-control-sm" />
                                        </div>
                                        <div class="col-12 col-lg-1">
                                            Vị trí:
                                        </div>
                                        <div class="col-12 col-lg-1">
                                            <input asp-for="@Model.Position" type="text" class="form-control form-control-sm" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12 col-lg-2">
                                            Tiêu đề:
                                        </div>
                                        <div class="col-12 col-lg-10">
                                            <input asp-for="@Model.Title" type="text" class="form-control form-control-sm" />
                                        </div>
                                    </div>



                                    <div class="row">
                                        <div class="col-12 col-lg-2">
                                            <a class="btn btn-primary" onclick="$(this).closest('form').submit()">
                                                <i class="fa fa-save"></i>
                                                Lưu
                                            </a>
                                        </div>
                                        <div class="col-12 col-lg-10">
                                            <div class="alert @ViewBag.MessageClass  alert-info alert-dismissible fade show" role="alert">
                                                <span class="message">@ViewBag.MessageText</span>
                                                <button type="button" class="close" data-dismiss="alert">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </content>
        </div>
    </div>
</section>

